<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_wave"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_tl"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black2"
        android:gravity="center"
        android:text="查询专区"
        android:textColor="#000000"
        android:textSize="25sp" />

    <com.example.waveviewdemo.WaveView
        android:id="@+id/wv_wave"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_wave"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="30dp" />

    <SeekBar
        android:id="@+id/sb_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wv_wave"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="110dp" />

    <EditText
        android:id="@+id/edt_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sb_wave"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/black2"
        android:hint="请输入0-1" />

    <Button
        android:id="@+id/btn_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="确认" />

</RelativeLayout>